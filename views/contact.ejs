            <div class="col centered">
              <span class="material-icons md-24 teal">
                location_on
              </span>
              <h5 class="text-center ml-3 mt-3">Located</h5>
            </div>
            <small class="text-center text-muted ml-sm-3 mt-3">St. Nicholas - Volimes, Zakynthos, Greece</small>
