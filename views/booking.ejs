<%- include("partials/header.ejs") %>

<!-- Half image carousel-->
<div id="cruises-carousel" class="carousel slide carousel-fade" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item w-100 active" id="imageCruises01"></div>
        <div class="carousel-item w-100" id="imageCruises02"></div>
    </div>
</div>

<!-- Booking section-->
<div class="rounded bg-light" id="overlap-container-nomove">

    <div class="container centered mb-5">
        <iframe id="sagendaFrame" src="https://www.sagenda.net/Frontend/Calendar/5eecad2fd67ba57510f06cc6"
            scrolling="no" height="2050" style="width:100%" frameborder="0" allowtransparency="true"
            sandbox="allow-popups allow-popups-to-escape-sandbox allow-same-origin allow-top-navigation allow-scripts allow-forms"></iframe>
        <script>
            window.addEventListener("message", receiveMessage, false);

            function receiveMessage(event) {
                if (event.data === "month") {
                    document.getElementById("sagendaFrame").height = "1100";
                } else {
                    document.getElementById("sagendaFrame").height = "2050";
                }
            }
        </script>
    </div>
</div>

<!-- Footer content -->
<footer class="container-fluid row mx-0" id="footer">
    <div class="container centered col-sm-4">
        <a class="centered" href="#" data-toggle="modal" data-target="#termsModal">
            <button class="btn my-2 my-sm-0 rounded-pill btn-purple">Terms and Conditions</button>
        </a>
    </div>
    <div class="container centered col-sm-4 text-muted">Theodosis Cruises</div>
    <div class="container centered col-sm-4">
        <!-- Footer Social Icons -->
        <a class="btn btn-social " href="https://www.facebook.com/theodosiscruises">
            <i class="fab fa-facebook text-secondary"></i>
        </a>
        <a class="btn btn-social " href="https://g.page/theodosiscruises?share">
            <i class="fab fa-google text-secondary"></i>
        </a>
        <a class="btn btn-social"
            href="https://www.tripadvisor.com/Attraction_Review-g189462-d4916155-Reviews-Theodosis_Cruises-Zakynthos_Ionian_Islands.html?m=19905">
            <i class="fab fa-tripadvisor text-secondary"></i>
        </a>
        <a class="btn btn-social " href="mailto: info@theodosiscruises.com">
            <i class="fab far fa-envelope text-secondary"></i>
        </a>
    </div>
</footer>

<!--    Terms and conditions modal  -->
